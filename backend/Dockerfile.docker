FROM node:18-bullseye

RUN apt-get update && \
    apt-get install -y python3 python3-pip ffmpeg && \
    rm -rf /var/lib/apt/lists/*

RUN pip3 install -U yt-dlp

WORKDIR /app

COPY package*.json ./

# FIXED — no package-lock.json → use npm install, NOT npm ci
RUN npm install --production

COPY . .

EXPOSE 3000

CMD ["npm", "start"]
